  "scripts": {
    "postbuild": "ts-node postbuild.ts",
    "release": "yarn mp48-release",
    "version": "yarn build",
    "build": "rm -rf dist && yarn frontend:dist && yarn lib:build",
    "types": "yarn lib:types && yarn frontend:types",
    "devServe": "nodemon --ignore frontend/ --ignore bin/client/ bin/index.ts",
    "devClient": "nodemon --ignore lib/",
    "lib:types": "tsc --noEmit",
    "lib:build": "tsc",
    "frontend:types": "tsc -P frontend/tsconfig.json --noEmit",
    "frontend:build": "git clean -fx frontend/public && rm -rf frontend/build && mp -B -A",
    "frontend:common": "webpack-cli -c webpack.config.ts",
    "frontend:dist": "yarn frontend:build && yarn frontend:common"
