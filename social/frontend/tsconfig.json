{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "WebWorker"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "@socket/*": [
        "../../lib/socket/*"
      ],
      "@api": [
        "../../lib/api/type"
      ],
      "@frontend/*": [
        "./*"
      ],
      "@web-push": [
        "../../lib/web-push/type"
      ]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.dev.ts",
    "**/.test.ts"
  ]
}
